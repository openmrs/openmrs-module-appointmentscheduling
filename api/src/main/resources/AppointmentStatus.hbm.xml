<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.appointment">

	<class name="AppointmentStatus" table="${project.parent.artifactId}_appointment_status">
		<id name="appointmentStatusId" type="int" column="appointment_status_id" unsaved-value="0">
			<generator class="native" />
		</id>
		
		<discriminator column="appointment_status_id" insert="false" />
		<property name="name" type="java.lang.String" not-null="true" length="255" />
		<property name="createdGroup" column="created_group" type="boolean" not-null="true" />
		<property name="changedGroup" column="changed_group" type="boolean" not-null="true" />
		<property name="canceledGroup" column="canceled_group" type="boolean" not-null="true" />
		<property name="inProgressGroup" column="in_progress_group" type="boolean" not-null="true" />
		<property name="missedGroup" column="missed_group" type="boolean" not-null="true" />
		<property name="finishedGroup" column="finished_group" type="boolean" not-null="true" />
		
		<property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" />
		
		<property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />
		<property name="dateChanged" type="java.util.Date" column="date_changed" length="19"/>
		<property name="dateRetired" type="java.util.Date" column="date_retired" length="19" />	
		
		<property name="retired" type="boolean" length="1" not-null="true" />
		<property name="retireReason" type="java.lang.String" column="retire_reason" length="255" />
		
		<many-to-one name="creator" class="org.openmrs.User" not-null="true" />	
		<many-to-one name="changedBy" class="org.openmrs.User" column="changed_by"/>
		<many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by" />
	</class> 

</hibernate-mapping>
